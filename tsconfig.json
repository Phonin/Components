{
  // SECTION Typescript Compiler Options
  "compilerOptions": {
    // SETTINGS Output

    // SETTINGS Declarations & Source Maps
    "declaration": true,                      // SETTING Emit Declaration (.d.ts) files - Recommended value: true
    "declarationMap": true,                   // SETTING Emit Declaration Map (.d.ts.map) files - Recommended value: true
    "sourceMap": true,                        // SETTING Emit Source Map (.js.map) - Recommended value: true
    "stripInternal": true,                    // SETTING Strip @internals from Declaration - Recommended value: true
    // !SETTINGS

    // SETTINGS File Locations
    "rootDir": "./ts",                        // SETTING Input (Root) Directory
    "outDir": "./js",                         // SETTING Output Directory
    "declarationDir": "./d",                  // SETTING Declaration Directory
    "mapRoot": "./js",                        // SETTING Source Map Directory (For Debuggers)
    "sourceRoot": "./ts",                     // SETTING Source Code Directory (For Debuggers)
    // !SETTINGS

    "module": "CommonJS",                     // SETTING Module Resolution - Recommended value: Depends on your use case
    "target": "ES5",                          // SETTING Target - Recommended value: ES5|ES6
    "removeComments": true,                   // SETTING Remove Comments - Recommended value: true
    "resolveJsonModule": true,                // SETTING Resolve JSON - Recommended value: true
    // !SETTINGS

    // SETTINGS Strict
    "strict": true,                           // SETTING Enable all strict type checking options - Recommended value: true
    "strictBindCallApply": true,              // SETTING Check that bind/call/apply methods match the original function - Recommended value: true
    "strictFunctionTypes": true,              // SETTING When assigning functions, check to ensure parameters and the return values are subtype-compatible. - Recommended value: true
    "strictPropertyInitialization": true,     // SETTING Check for proprieties that are declared but not defined in the constructor - Recommended value: true
    "strictNullChecks": true,                 // SETTING When type checking, take `null`/`undefined` into account
    "alwaysStrict": true,                     // SETTING Always add "use strict" to files
    // !SETTINGS

    // SETTING Emit Decorator Meta
    "experimentalDecorators": false,          // SETTING Enable Expirimental Decorators
    "emitDecoratorMetadata": false,           // SETTING Emit Decorator Metadata
    
    // SETTINGS Code-smell 
    "allowUnreachableCode": false,            // SETTING Allow Unreachable Code/Dead Code - Recommended value: false
    "allowSyntheticDefaultImports": false,    // SETTING Allow import x from y when y has no default export - Recommended value: false
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    // !SETTINGS

    // SETTINGS React
    "jsx": "react-native",                    // SETTING Do JSX
    "jsxFactory": "h",
    // !SETTINGS

    "diagnostics": false,                     // SETTING Log TS Diagnostics
  }
  // !SECTION
}
